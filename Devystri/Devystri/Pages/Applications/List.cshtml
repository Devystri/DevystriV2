@page
@using Data.Models;
@model Devystri.Pages.Applications.ListModel
@{
}

@section Styles{
    <link rel="stylesheet" href="~/css/Pages/products.css" />
}
@foreach (var item in Model.applications)
{
    <section id="application-@item.Name" class="section">
        <div class="left-part">
            <img draggable="false" alt="Application" src="~/Assets/Images/applicationList/@item.PresentationRessource" />
        </div>
        <div class="right-part">
            @if (item.Stat == (int)Stats.CANCEL)
            {
                <span class="project-status project-cancelled"></span>
            }
            else if (item.Stat == (int)Stats.NOT_MARKETED)
            {
                <span class="project-status not-marketed"></span>
            }
            else if (item.Stat == (int)Stats.NOT_DOWNLABLE)
            {
                <span class="project-status not-downloadable"></span>
            }

            <figure>
                <img draggable="false" class="logo-product" alt="Logo de l'application @item.Name" src="~/Assets/Images/applicationList/@item.AppLogoName" />
            </figure>
            <h1 class="title-product">@item.Name</h1>
            <h2 class="product-description">@item.Description</h2>
            <div class="compatibility">
                <div class="platform">
                    @if (item.IsOnAppStore == 1)
                    {
                        <span class="platform-logo" title="AppStore"><img draggable="false" src="~/Assets/elements/appstroe.svg" /></span>
                    }
                    @if (item.IsOnPlayStore == 1)
                    {
                        <span class="platform-logo" title="Playstore"><img draggable="false" src="~/Assets/elements/playstore.svg" /></span>

                    }
                </div>
            </div>
            <a title="En savoir plus sur l'application @item.Name" class="more-button more-button-list">En savoir plus</a>
        </div>
    </section>
}

