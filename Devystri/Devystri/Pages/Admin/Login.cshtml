@page
@model Devystri.Pages.Admin.LoginModel
@{
    ViewData["Title"] = "Page de connexion";
}
@section Styles{
    <link rel="stylesheet" href="~/css/Pages/admin/admin-login-password.css" />
}

<section id="admin-login">
    <div id="login">
        <h2 class="page-title">Devystri</h2>
        <p class="page-description">Administration</p>
        <form method="post">
            <span class="form-title">Connexion</span>
            <input asp-for="Login.Email" class="input-area" placeholder="Email" />
            <span class="error-span" asp-validation-for="Login.Email"></span>
            <input asp-for="Login.Password" class="input-area" placeholder="Mot de passe" />
            <span class="error-span" asp-validation-for="Login.Password"></span>
            <input class="send-button" type="submit" value="Envoyer">
        </form>
    </div>
    <div id="prevention-message">
        <span id="prevention-message-text">Cette page est strictement réserver aux personnes disposant d'un accès administrateur de devystri. Toutes tentatives d'intrusions non autorisées par l'administrateur du site sera poursuivie.</span>
        <a id="back-main-page">Retour à la page principal</a>
    </div>
</section>

@{
    int statement = (Model.Success) ? 3 : 1;
}
@section Scripts{
    @if (Model.Message is not null)
    {
        <script> errorPopup(@statement, "@Model.Message"); </script>
    }
}