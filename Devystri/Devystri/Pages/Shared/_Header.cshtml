@{ 

    string url = Url.ActionContext.HttpContext.Request.Path;
    url = url.ToLower();
} 
<header id="header">
    <a id="header-logo" asp-area="" asp-page="/Index"><img draggable="false" src="~/Assets/Images/header/devystri-logo.png" /></a>
    <div id="nav-location">
        @if (User.Identity.IsAuthenticated && url.Contains("admin"))
        {
            //Ici pour le header admin
            <nav>
                <a asp-area="" asp-page="/admin/manage-application">Applications</a>
                <a asp-area="" asp-page="/Web-Sites/List">Sites web</a>
                <a asp-area="" asp-page="/Internet-Of-Things/List">Objets connectés</a>
            </nav>
            <div id="header-admin-left">
                <div id="header-admin-nav">
                    <nav>
                        <a asp-area="" asp-page="/Contact">Newsletter</a>
                        <a asp-area="" asp-page="/About">Utilisateur</a>
                    </nav>
                    <div  id="user-admin">
                        <img draggable="false" src="~/Assets/elements/admin-user-picture.png" />
                        <div id="user-info">
                            <span id="user-admin-name">Admin</span>
                            <span id="user-admin-id">admon@devystri.com</span>
                        </div>
                    </div>
                </div>
                <div style="display:none" id="user-admin-box">
                    <span id="user-admin-box-name">Admin</span>
                    <span id="user-admin-box-id">admon@devystri.com</span>
                    <a class="admin-user-button" href="#">Changer de mot de passe</a>
                    <a class="admin-user-button" href="#">Changer la photo de profil</a>
                    <a class="admin-user-button" id="sign-out" href="#">Se déconnecter</a>
                </div>
            </div>

        }
        else
        {
            <nav>
                <a asp-area="" asp-page="/Applications/List">Applications</a>
                <a asp-area="" asp-page="/Web-Sites/List">Sites web</a>
                <a asp-area="" asp-page="/Internet-Of-Things/List">Objets connectés</a>
            </nav>
            <nav>
                <a asp-area="" asp-page="/Contact">Contact</a>
                <a asp-area="" asp-page="/About">A propos</a>

            </nav>
        }

    </div>
    <input onchange="menuStateChanhed()" class="menu-btn" name="menu-btn" type="checkbox" id="menu-btn" />
    <label class="menu-icon" for="menu-btn"><span class="navicon"></span></label>
</header>