<script src="~/js/particle.js"></script>
@{

    DateTime valentin = new DateTime(DateTime.Now.Year, 2, 14);
    DateTime christmas = new DateTime(DateTime.Now.Year, 12, 25);
    DateTime birthday = new DateTime(DateTime.Now.Year, 10, 16);
    bool ev = false;
    List<string> src = new List<string>();

    string settings = "";
    if (DateTime.Now.Day == valentin.Day && DateTime.Now.Month == valentin.Month)
    {
        src = new List<string>() { "Assets/Images/Particles/Hearts/heart.svg" };
        settings = "src, 20, 10, 1";
        ev = true;

    }
    else if (DateTime.Now.Day == christmas.Day && DateTime.Now.Month == christmas.Month)
    {
        ev = true;

    }
    else if (DateTime.Now.Day == birthday.Day && DateTime.Now.Month == birthday.Month)
    {
        src = new List<string>() { "Assets/Images/Particles/Balloon/Red.svg", "Assets/Images/Particles/Balloon/Blue.svg", "Assets/Images/Particles/Balloon/Green.svg", "Assets/Images/Particles/Balloon/Pink.svg", "Assets/Images/Particles/Balloon/Yellow.svg" };
        settings = "src, 100, 10, 1";
        ev = true;

    }

    if(Context.Request.Path != "/")
    {
        ev = false;
    }
}


@if (ev)
{


<script>
        var src = @Json.Serialize(@src);
        var p = new Particles(@settings );
</script>
}