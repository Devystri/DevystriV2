@namespace Devystri.Pages.Shared

@model Devystri.Modules.SectionsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@if (Model.Sections is not null)
{
    @for (int i = 0; i < Model.Sections.Count; i++)
    {
        <div class="feature-container">
            <div class="feature-text">
                <h2 class="feature-title">@Model.Sections[i].Title</h2>
                <p class="feature-description">@Model.Sections[i].Description</p>
            </div>
            <div class="container-image">
                <img draggable="false" class="feature-image" alt="Image décrivant le site @Model.Name" src="~/upload/websites/@Model.Sections[i].ImageSrc" />
            </div>
        </div>
    }

}

