
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-4NEK3HMFXM"></script>
    <script>window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-4NEK3HMFXM');</script>
    <link rel="mask-icon" href="~/devystri.ico" color="#073965">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Devystri - @ViewData["Title"] </title>

    <link rel="stylesheet" href="~/css/loadscreen.css" />
</head>
<body>
    <script src="~/js/HTMLElements/loader.js"></script>
    <loader-element>
        <div id="links">

            <link rel="stylesheet" href="~/css/site.css" />
            <link rel="stylesheet" href="~/css/HTMLElements/header.css" />
            <link rel="stylesheet" href="~/css/HTMLElements/footer.css" />


            @await RenderSectionAsync("Styles", required: false)
        </div>
        <div id="loadscreen">
            <h1>Devystri</h1>
            <div class="wrapper">
                <div class="circle"></div>
                <div class="circle"></div>
                <div class="circle"></div>
                <div class="shadow"></div>
                <div class="shadow"></div>
                <div class="shadow"></div>
            </div>
        </div>

    </loader-element>

    @await Html.PartialAsync("_Header.cshtml")

    <main role="main">
        @RenderBody()
    </main>


    @await Html.PartialAsync("_Footer.cshtml")


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* CDN *@
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

    <script src="~/js/popup.js" asp-append-version="true"></script>

        <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Html.PartialAsync("_ParticlesEvent.cshtml")
    @await Html.PartialAsync("_ValidationScriptsPartial")


</body>
</html>
